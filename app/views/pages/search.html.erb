<% if @results.present? %>
  <%= render partial: "shared/masthead", locals: { title: "Results for #{@query}" } %>
  <div class="container-fluid pb-5">
    <div class="row justify-content-center pt-3">
      <div class="col-md-8">
        <% @results.each do |result| %>
          <div class="card mt-3">
            <div class="card-body">
              <h4 class="card-title"><%= link_to result.title, result %></h4>
              <h6 class="card-subtitle mb-2"><%= result.organisation %></h6>
              <h6 class="card-subtitle mb-2 text-muted"><%= result.location %></h6>
            </div>
          </div>
        <% end %>
        <% if @expired_results.present? %>
          <h3 class="mt-4 text-muted">Expired listings</h3>
          <% @expired_results.each do |result| %>
            <div class="card mt-3">
              <div class="card-body">
                <h4 class="card-title text-muted"><%= link_to result.title, result %></h4>
                <h6 class="card-subtitle mb-2 text-muted"><%= result.organisation %></h6>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <%= render partial: "shared/masthead", locals: { title: "No results for #{@query}" } %>
<% end %>
