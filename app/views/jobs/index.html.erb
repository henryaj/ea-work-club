
<div id="masthead" class="container-fluid white-on-blue">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="display-2">Jobs</h1>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row justify-content-center pt-5">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Location</th>
            <th>Time commitment</th>
            <th>Organisation</th>
            <th colspan="5"></th>
          </tr>
        </thead>

        <tbody>
          <% @jobs.each do |job| %>
            <tr>
              <td><%= '<span data-toggle="tooltip" title="Applications due today">⚠️</span>'.html_safe if job.expires_today? %></td>
              <th scope="row"><%= link_to job.title, job %></th>
              <td><%= job.location %></td>
              <td><%= job.pretty_time_commitment %></td>
              <td><%= job.organisation %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
