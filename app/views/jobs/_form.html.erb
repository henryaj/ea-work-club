<div class="form-group">
  <%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :job_title, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, id: :job_location, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :job_description, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :time_commitment %>
    <%= form.select :time_commitment, Job.time_commitments.keys, id: :time_commitment, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :organisation %>
    <%= form.text_field :organisation, id: :job_organisation, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label "URL" %>
    <%= form.text_field :url, id: :url, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label "Applications due by" %>
    <%= form.date_field :expiry_date, id: :expiry_date, class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="field">
      <button type="submit" class="btn btn-primary">Submit</button>
  </div>
  <% end %>
</div>
