<%= render partial: "shared/masthead", locals: { title: "All Categories" } %>

<div class="container-fluid pb-5">
  <div class="row justify-content-center pt-3">
    <div class="col-md-8">
      <div class="card-columns">
        <% @categories.each do |category| %>
          <div class="card mt-3">
            <div class="card-body">
              <h4 class="card-title"><%= category.name %></h4>
              <% if category.description.present? %>
              <p class="card-text"><%= category.description.split('.').first %></p>
              <% end %>
              <h6><%= link_to 'View jobs', category_jobs_url(category_id: category.id), class: "card-link" %>
                <% if category.jobs.active.count > 0 %>
                <span class="badge badge-pill badge-primary">
                  <%= category.jobs.active.count %>
                </span>
                <% end %>
              </h6>
              <h6><%= link_to 'View projects', category_projects_url(category_id: category.id), class: "card-link" %>
                <% if category.projects.active.count > 0 %>
                <span class="badge badge-pill badge-primary">
                  <%= category.projects.active.count %>
                </span>
                <% end %>
              </h6>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
