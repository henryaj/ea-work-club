<!DOCTYPE html>
<html>
  <head>
    <script async src='https://www.googletagmanager.com/gtag/js?id=<%= ENV['GOOGLE_ANALYTICS_ID'] %>'></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', '<%= ENV['GOOGLE_ANALYTICS_ID'] %>');
    </script>

    <title>EA Work Club</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <% if notice %>
    <div class="container-fluid" id="flash">
      <div class="alert alert-warning" role="alert">
        <%= notice %>
      </div>
    </div>
    <% end %>
    <div class="container-fluid" id="navbar">
      <nav class="navbar navbar-expand-lg">
        <div class="navbar-collapse">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <% if user_signed_in? %>
              <a class="nav-link" href="/logout">Log Out</a>
              <% else %>
              <a class="nav-link" href="/auth/auth0">Login</a>
              <% end %>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="mailto:henry@henrystanley.com">Contact</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="https://tinyletter.com/eaworkclub"><b>Get Updates</b></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= new_job_path %>"><b>Submit a Job</b></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="https://goo.gl/forms/JXyEZ9r4hOcpvyXv2"><b>Submit a Project</b></a>
            </li>
          </ul>
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link" href="https://whatiseffectivealtruism.com/#whatis">Effective Altruism?</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
    <%= yield %>
  </body>
</html>
