<div id="masthead" class="container-fluid white-on-blue">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="display-2">Projects</h1>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row justify-content-center pt-5">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Organisation</th>
            <th>Submitted</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @projects.each do |project| %>
            <tr>
              <th scope="row"><%= link_to project.title, project %></th>
              <td><%= project.organisation %></td>
              <td><%= project.created_at.to_date.to_formatted_s(:short) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
